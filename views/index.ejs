    <div class="container">
        <div class="row">
            <div class="col s12">
                <h1>John Carpenter Movies</h1>
                <p>A humble place where you can vote for your favorite John Carpenter movies!</p>
            </div>
        </div>

        <div class="row">
            <% films.sort((a, b) => a.year - b.year).forEach( el => { %>
                <div class="col s12 m6 l4 xl3">
                    <div class="card large hoverable">
                        <div class="card-image">
                            <img class="materialboxed" src="/assets/images/<%=el.title%>.jpg" alt="<%= el.title %> poster">
                        </div>
                        <div class="card-content">
                            <span class="card-title"><%= el.title %></span>
                            <span><%= el.year %></span>
                            <span class="right"><%= el.mpaaRating %></span>
                        </div>
                        <div class="card-action">
                            <button class="btn waves-effect waves-light btn-small" type="submit" name="action">Like
                                <i class="material-icons right">thumb_up</i>
                            </button>
                            <span class="badge"><%= el.likes %></span>
                        </div>
                    </div>
                </div>
            <% }) %>


